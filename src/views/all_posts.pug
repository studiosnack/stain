doctype html

head
  title #{user.name} ✕ fotos
  meta(charset="utf-8")
  meta(name="viewport" content="width=device-width, initial-scale=1")

  link(rel="stylesheet" href="/styles.css")

body

  ul(class="grid")
    each post, idx in allPosts
      li(id=post.id class=`gridPost ${JSON.parse(post.media).length > 1 ? 'multi' : ''}`)
        a(href=`/p/${post.id}`)
          img(
          src=`/m/s/${JSON.parse(post.media)[0]}` 
          loading="lazy" 
          class="gridImg"
          width="250" 
          height="250"
          srcset=`/m/s/${JSON.parse(post.media)[0]} 500w, /m/m/${JSON.parse(post.media)[0]} 1080w`
          sizes=`(min-width: 800px) 250px, 360px`
        )
        div.postCaptions
          - let pubDate = new Date(post.created_on * 1000)
          p.postDate
            = `${pubDate.getFullYear()}`
          if post.title
            p.title #{post.title}
          if post.caption
            p.caption #{post.caption}  
          - var photocount = Number(JSON.parse(post.media).length)
          if photocount > 1
            span #{photocount} 🖼️
